<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/card_view_shadow_value"
        android:layout_margin="@dimen/card_view_shadow_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bluetooth_list_card_view_height">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="@dimen/default_left_and_right_margin"
                android:layout_marginRight="@dimen/default_left_and_right_margin"
                android:layout_marginTop="@dimen/default_top_and_bottom_margin"
                android:layout_marginBottom="@dimen/default_top_and_bottom_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/default_text_size_title"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_mac"
                    android:textSize="@dimen/default_text_size_content"
                    android:layout_marginTop="@dimen/default_text_view_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>