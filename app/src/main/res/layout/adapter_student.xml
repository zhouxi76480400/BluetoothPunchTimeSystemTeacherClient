<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ll_main"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:background="?attr/selectableItemBackground"
        android:layout_margin="@dimen/card_view_shadow_value"
        app:cardElevation="@dimen/card_view_shadow_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/student_list_card_view_height">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/default_left_and_right_margin"
                android:layout_marginTop="@dimen/default_top_and_bottom_margin"
                android:layout_marginBottom="@dimen/default_top_and_bottom_margin"
                android:layout_marginRight="@dimen/default_left_and_right_margin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/default_left_and_right_margin"
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>